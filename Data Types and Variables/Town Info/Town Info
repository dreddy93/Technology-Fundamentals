using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Blanck_Project
{
    class Program
    {
        static void Main(string[] args)
        {
            string firstChar =  Console.ReadLine();
            int secondChar = int.Parse(Console.ReadLine());
            int thirdChar =  int.Parse(Console.ReadLine());

            Console.WriteLine($"Town {firstChar} has population of {secondChar} and area {thirdChar} square km.");
        }
    }
}
